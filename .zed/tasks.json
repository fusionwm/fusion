[
  {
    "label": "Run Fusion compositor (debug)",
    "command": "cargo",
    "args": ["run", "-p", "compositor"],
  },
  {
    "label": "Run Fusion compositor (release)",
    "command": "cargo",
    "args": ["run", "-p", "compositor", "--release"],
  },
  {
    "label": "Install cargo-fusion",
    "command": "cargo",
    "args": ["install", "--path", "crates/cargo-fusion"],
  },
  {
    "label": "Run integration tests [plugin-engine]",
    "command": "cargo",
    "args": ["test", "-p", "plugin-engine", "--", "--nocapture"],
  },
]
